<%-include("header")-%>
<div class="container" style="text-align: center; min-height: 80vh;">
    <br><br>
    <h3>All Classes List: </h3>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="width: 15%;">Course Name</th>
            <th scope="col" style="width: 15%;">Course Number</th>
            <th scope="col" style="width: 12%;">Section</th>
            <th scope="col" style="width: 15%;">Year</th>
            <th scope="col" style="width: 15%;">Semester</th>
            <th scope="col" style="width: 15%;">Class Details</th>
            <th scope="col" style="width: 15%;">Canceled</th>
          </tr>
        </thead>
        <tbody>
            <%for(var i = 0; i<classes.length; i++){%>
                <tr>
                    <td><br><%=classes[i].course_fullname%></td>
                    <td><br><%=classes[i].course_shortname%></td>
                    <td><br><%=classes[i].section%></td>
                    <td><br><%=classes[i].year%></td>
                    <td><br><%=classes[i].semester%></td>
                    <td>
                        <form action="/allClasses" method="post">
                            <br>
                            <input type="hidden" name="classID" value="<%=classes[i]._id%>">
                            <button class="btn btn-primary" type="submit" name="action" value="classDetails"> More Details</button>
                        </form>
                    </td>
                    <td>
                        <form action="/allClasses" method="post">
                            <input type="hidden" name="classID" value="<%=classes[i]._id%>">
                            <%if(classes[i].canceled){%>
                                Yes <br>
                                <button class="btn btn-primary" type="submit" name="action" value="resumeClass"> Resume Class</button>
                            <%}else{%>
                                No <br>
                                <button class="btn btn-primary" type="submit" name="action" value="cancelClass"> Cancel Class</button>
                            <%}%>
                        </form>
                        
                    </td>
                </tr>
            <%}%>
        </tbody>
    </table>
    <br><br>
</div>
    
<%-include("footer")-%>
